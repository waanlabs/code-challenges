{
    "name": "Nerdcore | Code Challenges",
    "build": {
        "context": ".",
        "dockerfile": "Dockerfile",
        "args": {}
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/wired/code_challenges,type=bind",
